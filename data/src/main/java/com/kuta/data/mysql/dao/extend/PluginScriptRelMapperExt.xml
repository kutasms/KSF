<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kuta.database.mysql.dao.extend.PluginScriptRelMapperExt">

<resultMap type="com.kuta.database.mysql.pojo.extend.PluginScriptWithRel"  
	id="ResultMapWithScript"  
	extends="com.kuta.database.mysql.dao.ScriptMapper.BaseResultMap">
		<constructor>
	      <arg column="rel_index" javaType="java.lang.Short" jdbcType="SMALLINT" />
	      <arg column="rel_status" javaType="java.lang.String" jdbcType="VARCHAR" />
	      <arg column="rel_backup_oid" javaType="java.lang.String" jdbcType="VARCHAR" />
	    </constructor>
	</resultMap>

  <select id="getScripts" parameterType="java.lang.Integer" resultMap="ResultMapWithScript">
    select 
    o.*
    , por.index as rel_index, por.status as rel_status, por.backup_oid as rel_backup_oid from BS_Plugin_Script_Rel por inner join BS_Script o on por.oid = o.oid
	where por.pid = #{pid, jdbcType=INTEGER}
  </select>
